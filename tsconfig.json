{
  "extends": "@tsconfig/node12",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  },
  "include": ["src"]
}
